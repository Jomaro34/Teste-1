[
  {
    "id": "til_errado_pao",
    "pattern": "paõ",
    "flags": "gi",
    "replacement": "pão",
    "description": "Corrige 'paõ' para 'pão'"
  },
  {
    "id": "espacos_multiplos",
    "pattern": "\\s{2,}",
    "flags": "g",
    "replacement": " ",
    "description": "Remove espaços duplicados"
  },
  {
    "id": "espaco_antes_virgula",
    "pattern": "\\s+,",
    "flags": "g",
    "replacement": ",",
    "description": "Remove espaço antes de vírgula"
  },
  {
    "id": "espaco_antes_ponto",
    "pattern": "\\s+\\.",
    "flags": "g",
    "replacement": ".",
    "description": "Remove espaço antes de ponto"
  },
  {
    "id": "espaco_antes_exclamacao",
    "pattern": "\\s+!",
    "flags": "g",
    "replacement": "!",
    "description": "Remove espaço antes de !"
  },
  {
    "id": "espaco_antes_interrogacao",
    "pattern": "\\s+\\?",
    "flags": "g",
    "replacement": "?",
    "description": "Remove espaço antes de ?"
  },
  {
    "id": "espaco_apos_pontuacao",
    "pattern": "([,\\.!?:;])([A-Za-zÀ-ÿ])",
    "flags": "g",
    "replacement": "$1 $2",
    "description": "Adiciona espaço após pontuação"
  },
  {
    "id": "maiuscula_inicio_frase",
    "pattern": "^([a-zà-ÿ])",
    "flags": "",
    "replacement": "$1",
    "description": "Primeira letra maiúscula (limitação: não converte automaticamente)"
  },
  {
    "id": "virgula_dupla",
    "pattern": ",,+",
    "flags": "g",
    "replacement": ",",
    "description": "Remove vírgulas duplicadas"
  },
  {
    "id": "ponto_duplo",
    "pattern": "\\.{2,}(?!\\.)",
    "flags": "g",
    "replacement": ".",
    "description": "Remove pontos duplicados (exceto reticências)"
  },
  {
    "id": "erro_mais",
    "pattern": "\\bmaiz\\b",
    "flags": "gi",
    "replacement": "mais",
    "description": "Corrige 'maiz' para 'mais'"
  },
  {
    "id": "erro_mas",
    "pattern": "\\bmaس\\b",
    "flags": "gi",
    "replacement": "mas",
    "description": "Corrige 'maس' para 'mas'"
  },
  {
    "id": "erro_porque_junto",
    "pattern": "\\bpor que\\b(?! razão| motivo)",
    "flags": "gi",
    "replacement": "porque",
    "description": "Corrige 'por que' para 'porque' (quando aplicável)"
  },
  {
    "id": "erro_ha_a",
    "pattern": "\\ba ([0-9]|um|uma|dois|duas|três|quatro|cinco|seis|sete|oito|nove|dez)",
    "flags": "gi",
    "replacement": "há $1",
    "description": "Corrige 'a' para 'há' em expressões temporais"
  },
  {
    "id": "erro_aonde_onde",
    "pattern": "\\baonde\\b(?! vai| vais| foi| foram| ir)",
    "flags": "gi",
    "replacement": "onde",
    "description": "Corrige 'aonde' para 'onde' quando não indica movimento"
  },
  {
    "id": "erro_mim_fazer",
    "pattern": "\\bpara mim (fazer|ir|ver|ler|escrever|dizer|pensar|falar|comer|beber)",
    "flags": "gi",
    "replacement": "para eu $1",
    "description": "Corrige 'para mim fazer' para 'para eu fazer'"
  },
  {
    "id": "erro_mal_mau",
    "pattern": "\\bmau (feito|tratado|educado|humorado)",
    "flags": "gi",
    "replacement": "mal $1",
    "description": "Corrige 'mau' para 'mal' em advérbios"
  },
  {
    "id": "erro_houve_ouve",
    "pattern": "\\bouve\\b(?! dizer| falar| mencionar)",
    "flags": "gi",
    "replacement": "houve",
    "description": "Corrige 'ouve' para 'houve' (verbo haver)"
  },
  {
    "id": "erro_vir_ver",
    "pattern": "\\bvim (o|a|os|as|que|como)",
    "flags": "gi",
    "replacement": "vi $1",
    "description": "Corrige 'vim' (verbo vir) para 'vi' (verbo ver)"
  },
  {
    "id": "erro_sessao_secao",
    "pattern": "\\bseção\\b",
    "flags": "gi",
    "replacement": "secção",
    "description": "Corrige 'seção' (BR) para 'secção' (PT)"
  },
  {
    "id": "erro_expectativa",
    "pattern": "\\bexpetativa\\b",
    "flags": "gi",
    "replacement": "expectativa",
    "description": "Corrige 'expetativa' para 'expectativa'"
  }
]
